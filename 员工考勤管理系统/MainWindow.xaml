<Window x:Class="员工考勤管理系统.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:员工考勤管理系统"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Background="#FFF0F0F0" >
            <Button Name="Homepage_Button" Click="Homepage_Button_Click" Width="100" Content="首页" FontSize="18" Background="{x:Null}" BorderBrush="{x:Null}" />
            <Button Name="YuangongGL_Button" Click="YuangongGL_Button_Click" Width="100" Content="员工管理" FontSize="18" Background="{x:Null}" BorderBrush="{x:Null}" />
            <Button Name="Qingjia_Button" Click="Qingjia_Button_Click" Width="100" Content="请假" FontSize="18" Background="{x:Null}" BorderBrush="{x:Null}" />
            <Button Name="XTGL_Button" Click="XTGL_Button_Click" Width="100" Content="系统管理" FontSize="18" Background="{x:Null}" BorderBrush="{x:Null}" />
        </StackPanel>
  
        <Frame Name="Myframe" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
